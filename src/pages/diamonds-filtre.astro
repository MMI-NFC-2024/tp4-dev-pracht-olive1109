---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <h1 class="text-2xl font-bold mt-6 mb-6 text-gray-800 text-center">Diamonds - Prix moyen par couleur</h1>
  <nav class="flex gap-6 justify-center mb-8">
    <a href="/" class="font-semibold text-gray-500 hover:text-gray-900 underline decoration-gray-700 decoration-2">Accueil</a>
    <a href="/penguin-filtre" class="font-semibold text-gray-500 hover:text-blue-900 underline decoration-gray-700 decoration-2">Penguin</a>
    <a href="/simple-diamonds" class="font-semibold text-gray-500 hover:text-gray-900 underline decoration-gray-700 decoration-2">Simple Diamonds</a>
    <a href="/diamonds-filtre" class="font-semibold text-gray-500 hover:text-gray-900 underline decoration-gray-700 decoration-2">Diamonds avec filtre</a>
    <a href="/diamonds-multi-filtre" class="font-semibold text-gray-500 hover:text-gray-900 underline decoration-gray-700 decoration-2">Diamonds multi-filtres</a>
  </nav>

  <div class="flex items-center gap-4 mb-8 justify-center">
    <label for="color" class="font-medium text-gray-700">Couleur :</label>
    <select name="color" id="color" class="px-3 py-2 rounded border border-gray-300 bg-white text-base shadow-sm focus:outline-none focus:ring-2 focus:ring-gray-200">
      <option value="">Toutes les couleurs</option>
      <option value="D">D</option>
      <option value="E">E</option>
      <option value="F">F</option>
      <option value="G">G</option>
      <option value="H">H</option>
      <option value="I">I</option>
      <option value="J">J</option>
    </select>
  </div>

  <div id="plot"></div>

  <script type="module">
    import * as Plot from "https://cdn.jsdelivr.net/npm/@observablehq/plot/+esm";
    const selectColor = document.getElementById("color");
    const plotDiv = document.getElementById("plot");

    async function renderPlot() {
      const response = await fetch("/assets/diamonds.json");
      const diamonds = await response.json();

      const color = selectColor.value;
      let data, marks;

      if (color) {
        // Affiche les prix individuels pour la couleur sélectionnée
        data = diamonds.filter(d => d.color === color);
        marks = [
          Plot.dot(data, {
            x: "carat",
            y: "price",
            fill: "#a3a3a3"
          })
        ];
      } else {
        // Affiche le prix moyen par couleur
        const colorGroups = {};
        diamonds.forEach(d => {
          if (!colorGroups[d.color]) colorGroups[d.color] = [];
          colorGroups[d.color].push(d.price);
        });
        const avgByColor = Object.entries(colorGroups).map(([color, prices]) => ({
          color,
          avgPrice: prices.reduce((a, b) => a + b, 0) / prices.length
        }));
        marks = [
          Plot.barY(avgByColor, {
            x: "color",
            y: "avgPrice",
            fill: "#a3a3a3"
          })
        ];
      }

      plotDiv.innerHTML = "";

      const plot = Plot.plot({
        x: color ? { label: "Carat" } : { label: "Couleur du diamant" },
        y: color ? { label: "Prix (€)" } : { label: "Prix moyen (€)" },
        marks
      });

      plotDiv.appendChild(plot);
    }

    selectColor.addEventListener("change", renderPlot);

    renderPlot();
  </script>

  <style>
    .page-bg {
      font-family: 'Inter', Arial, sans-serif;
      background: linear-gradient(to right, #f3f4f6, #e5e7eb);
      min-height: 100vh;
    }
    h1 {
      text-align: center;
      font-size: 2rem;
      font-weight: 800;
      color: #374151;
      margin-bottom: 2rem;
      text-shadow: 0 2px 8px #0001;
    }
    nav {
      margin-bottom: 2rem;
    }
    nav a {
      font-weight: 600;
      color: #6b7280;
      text-decoration: underline;
      text-underline-offset: 3px;
      transition: color 0.2s;
      padding: 0.3em 0.7em;
      border-radius: 4px;
    }
    nav a:hover {
      color: #111827;
      background: #f3f4f6;
    }
    #plot {
      margin: 0 auto;
      margin-top: 2rem;
      max-width: 700px;
      border: 1px solid #d1d5db;
      padding: 2rem;
      background: #f3f4f6;
      border-radius: 1rem;
      box-shadow: 0 4px 16px #0001;
    }
  </style>
</Layout>