---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <h1 class="text-2xl font-bold mt-6 mb-6 text-gray-800 text-center">Diamonds - Multi-filtres</h1>
  <nav class="flex gap-6 justify-center mb-8">
    <a href="/" class="font-semibold text-gray-500 hover:text-gray-900 underline decoration-gray-700 decoration-2">Accueil</a>
    <a href="/penguin-multi-filtre" class="font-semibold text-gray-500 hover:text-blue-900 underline decoration-gray-700 decoration-2">Penguin</a>
    <a href="/simple-diamonds" class="font-semibold text-gray-500 hover:text-gray-900 underline decoration-gray-700 decoration-2">Simple Diamonds</a>
    <a href="/diamonds-filtre" class="font-semibold text-gray-500 hover:text-gray-900 underline decoration-gray-700 decoration-2">Diamond avec filtre</a>
    <a href="/diamonds-multi-filtre" class="font-semibold text-gray-500 hover:text-gray-900 underline decoration-gray-700 decoration-2">Diamonds multi-filtres</a>
  </nav>

  <div class="filters flex gap-6 mb-8 justify-center items-center">
    <label for="color" class="font-medium text-gray-700">Couleur :</label>
    <select name="color" id="color" class="px-3 py-2 rounded border border-gray-300 bg-white text-base shadow-sm focus:outline-none focus:ring-2 focus:ring-gray-200">
      <option value="">Toutes</option>
      <option value="D">D</option>
      <option value="E">E</option>
      <option value="F">F</option>
      <option value="G">G</option>
      <option value="H">H</option>
      <option value="I">I</option>
      <option value="J">J</option>
    </select>

    <label for="cut" class="font-medium text-gray-700">Taille :</label>
    <select name="cut" id="cut" class="px-3 py-2 rounded border border-gray-300 bg-white text-base shadow-sm focus:outline-none focus:ring-2 focus:ring-gray-200">
      <option value="">Toutes</option>
      <option value="Fair">Fair</option>
      <option value="Good">Good</option>
      <option value="Very Good">Very Good</option>
      <option value="Premium">Premium</option>
      <option value="Ideal">Ideal</option>
    </select>

    <label for="clarity" class="font-medium text-gray-700">Clarté :</label>
    <select name="clarity" id="clarity" class="px-3 py-2 rounded border border-gray-300 bg-white text-base shadow-sm focus:outline-none focus:ring-2 focus:ring-gray-200">
      <option value="">Toutes</option>
      <option value="I1">I1</option>
      <option value="SI2">SI2</option>
      <option value="SI1">SI1</option>
      <option value="VS2">VS2</option>
      <option value="VS1">VS1</option>
      <option value="VVS2">VVS2</option>
      <option value="VVS1">VVS1</option>
      <option value="IF">IF</option>
    </select>
  </div>

  <div id="plot" class="border rounded bg-gray-50 p-4 shadow"></div>

  <script type="module">
    import * as Plot from "https://cdn.jsdelivr.net/npm/@observablehq/plot/+esm";
    const selectColor = document.getElementById("color");
    const selectCut = document.getElementById("cut");
    const selectClarity = document.getElementById("clarity");
    const plotDiv = document.getElementById("plot");

    async function renderPlot() {
      const response = await fetch("/assets/diamonds.json");
      const diamonds = await response.json();

      const color = selectColor.value;
      const cut = selectCut.value;
      const clarity = selectClarity.value;

      // Filtre les données selon les sélections
      const filtered = diamonds.filter(d =>
        (color === "" || d.color === color) &&
        (cut === "" || d.cut === cut) &&
        (clarity === "" || d.clarity === clarity)
      );

      // Affiche les prix individuels pour les filtres sélectionnés
      const marks = [
        Plot.dot(filtered, {
          x: "carat",
          y: "price",
          stroke: "color",
          fill: "#a3a3a3"
        })
      ];

      plotDiv.innerHTML = "";

      const plot = Plot.plot({
        x: { label: "Carat" },
        y: { label: "Prix (€)" },
        marks
      });

      plotDiv.appendChild(plot);
    }

    selectColor.addEventListener("change", renderPlot);
    selectCut.addEventListener("change", renderPlot);
    selectClarity.addEventListener("change", renderPlot);

    renderPlot();
  </script>

  <style>
    .page-bg {
      font-family: 'Inter', Arial, sans-serif;
      background: linear-gradient(to right, #f3f4f6, #e5e7eb);
      min-height: 100vh;
    }
    h1 {
      text-align: center;
      font-size: 2rem;
      font-weight: 800;
      color: #374151;
      margin-bottom: 2rem;
      text-shadow: 0 2px 8px #0001;
    }
    nav {
      margin-bottom: 2rem;
    }
    nav a {
      font-weight: 600;
      color: #6b7280;
      text-decoration: underline;
      text-underline-offset: 3px;
      transition: color 0.2s;
      padding: 0.3em 0.7em;
      border-radius: 4px;
    }
    nav a:hover {
      color: #111827;
      background: #f3f4f6;
    }
    .filters {
      margin-bottom: 2rem;
    }
    .filters label {
      font-weight: 600;
      color: #374151;
      margin-right: 0.5em;
    }
    .filters select {
      padding: 0.5em 1em;
      border-radius: 0.5em;
      border: 1px solid #d1d5db;
      background: #fff;
      font-size: 1rem;
      box-shadow: 0 2px 8px #0001;
      transition: border 0.2s;
    }
    .filters select:focus {
      border-color: #374151;
      outline: none;
    }
    #plot {
      margin: 0 auto;
      margin-top: 2rem;
      max-width: 700px;
      border: 1px solid #d1d5db;
      padding: 2rem;
      background: #f3f4f6;
      border-radius: 1rem;
      box-shadow: 0 4px 16px #0001;
    }
  </style>
</Layout>